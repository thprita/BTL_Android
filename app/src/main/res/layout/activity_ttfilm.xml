<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ttfilm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37B55B"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="92dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvphimchill"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="PHIMCHILL"
            android:textAlignment="textStart"
            android:textColor="#E41414"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/imagesearch"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:paddingRight="10dp"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="530dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Phim hot 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tva1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#79BF27"
                    android:paddingLeft="10dp"
                    android:text="a1"
                    android:textColor="#BF1111"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />

            </LinearLayout>

            <!-- Phim hot 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tva2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:background="#79BF27"
                    android:text="a2"
                    android:textColor="#BF1111"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />

            </LinearLayout>

            <!-- Phim hot 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tva3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="a3"
                    android:background="#79BF27"
                    android:textColor="#BF1111"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />

            </LinearLayout>

            <!-- Phim hot 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tva4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:background="#79BF27"
                    android:text="a4"
                    android:textColor="#BF1111"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/r4"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imagehome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/trangchu" />

        <ImageView
            android:id="@+id/imagefilm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imagekh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/taikhoan" />

    </LinearLayout>

</LinearLayout>