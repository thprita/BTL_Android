<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tl1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/muiten"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Thông tin phim"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ScrollView để bao bọc các thành phần -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- LinearLayout để chứa các EditText -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- EditText để nhập tiêu đề -->
                <EditText
                    android:id="@+id/edttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nhập tiêu đề" />

                <!-- EditText để nhập nội dung -->
                <EditText
                    android:id="@+id/edtnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nhập nội dung" />

                <!-- EditText để nhập URL hình ảnh -->
                <EditText
                    android:id="@+id/edtimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nhập URL hình ảnh" />

                <!-- EditText để nhập URL video -->
                <EditText
                    android:id="@+id/edtvideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nhập URL video" />

                <!-- EditText để nhập vị trí xem -->
                <EditText
                    android:id="@+id/edtwatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nhập vị trí xem" />

                <!-- EditText để nhập ID -->
                <EditText
                    android:id="@+id/edtid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="ID" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Button để thêm dữ liệu -->
                    <Button
                        android:id="@+id/btnthem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Thêm" />

                    <!-- Button để sửa dữ liệu -->

                    <Button
                        android:id="@+id/btnsua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sửa" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Button để xóa dữ liệu -->
                    <Button
                        android:id="@+id/btnxoa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Xóa" />

                    <!-- Button để hiển thị danh sách -->
                    <Button
                        android:id="@+id/btnds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Danh sách" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Layout chứa hai button "Thêm" và "Sửa" -->

    <!-- Layout chứa hai button "Xóa" và "Danh sách" -->

    <!-- ListView để hiển thị danh sách -->

</LinearLayout>
