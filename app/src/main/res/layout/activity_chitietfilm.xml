<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <!-- ImageView to display movie image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagetl2"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/muiten"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="20sp"
            android:padding="10dp"
            android:textAlignment="viewStart" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_movie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        />

    <!-- TextView for movie title -->

        <!-- TextView for movie description -->
    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Movie Description"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- TextView for watch position -->
    <TextView
        android:id="@+id/text_watch_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Watch Position: 0 min"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Movie Title"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnxemfilm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem phim" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Nội dung    "
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtbinhluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá     "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtdanhgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>


        <Button
            android:id="@+id/btnbinhluan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình luận" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerbl"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

    </LinearLayout>
</ScrollView>